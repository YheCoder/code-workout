%h1 List of Questions
-if @questions.size == 0
	%em = No Questions Found
-else
	=link_to "New", new_question_path, class: "btn btn-default"

	%table
		%r
			%th Title: 
			%th User:
			%th Posted:
		- @questions.each do |question|
			%tr
				%td= link_to question.title, question
				%td= question.user_id
				%td= question.created_at
				%td= link_to "Edit", edit_question_path(question), class: "btn btn-default"
				%td= link_to "Delete", question, method: :delete, class: "btn btn-default"

 
